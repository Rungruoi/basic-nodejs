<% include partials/_header %>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <h3 class="text-center">Update Employee: <%= employee.name %></h3>
          <form action="/edit/<%= employee._id %>" method="post">
            <div class="form-group">
              <label for="">Name</label>
              <input class="form-control" type="text" name="name" placeholder="Title" value="<%= employee.name %>">
            </div>
            <div class="form-group">
              <label for="">Email</label>
              <input class="form-control" type="text" name="email" placeholder="Title" value="<%= employee.email %>">
            </div>
            <div class="form-group">
              <label for="">Phone</label>
              <input class="form-control" type="text" name="phone" placeholder="Title" value="<%= employee.phone %>">
            </div>  
            <div class="form-group">
              <label for="">Address</label>
              <textarea class="form-control" name="description" cols="80"
                placeholder="Add a Description"
                ><%= employee.address %></textarea>
            </div>
            <button class="btn btn-primary" type="submit">
              Update 
            </button>
            <a href="/" class="btn btn-secondary">
              Back
            </a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer%>
